.search-post {
  border: 1px solid #bbb;
  margin: 0.5rem 0;
  .search-post-title {
    padding: 0.9rem 1rem;
    font-size: 1.3rem;
    .title{
      margin-right: 0.7rem
    }
    a {
      text-decoration: none;
      &:hover{
        text-decoration: underline;
      }
      &.tag{
        text-decoration: underline;
        font-size: 0.9em;
        color: var(--tag-color);
        &:hover{
          color: var(--link-hover-color);
        }
      }
    }
  }
  span.search-key-word {
    color: red;
    font-weight: bold;
  }
  .search-post-tags {
    padding: 0 1.2rem;
    margin-bottom: 1rem;
  }
  ul {
    li {
      list-style: square;
    }
    margin-top: 0;
  }
}

.search-shadow {
  transition: all .2s ease;
}
.search-shadow.active {
  position: fixed;
  top: 0;
  width: 100%;
  height: 100vh;
  background-color: #00000012;
}
.search-box {
  display: none;
}
.search-box.active {
  display: block;
  position: fixed;
  z-index: 1;
  top: 0;
  left: 0;
  width: 100%;
  height: 100vh;
}
.search-container {
  display: none;
}
.active .search-container {
  display: block;
  width: 60%;
  margin: 72px auto;
  padding: 1em .5em 1em 1em;
  background-color: var(--background-color);
  border-radius: 2px;
  box-shadow: 0px 1px 4px var(--search-container-shadow-color);
}
.active .search-container-inner {
  max-height: 80vh;
  overflow-y: auto;
  padding-right: 4px;
}