.articles-list{
  h2{
    margin-top: 1em;
    font-size: 2em;
  }
  margin: auto;
  max-width: 1100px;
  a {
    text-decoration: none;
    &.tag{
      color: var(--tag-color);
      &:hover{
        text-decoration: underline;
        color: var(--link-hover-color);
      }
    }
    &:hover{
      text-decoration: underline;
      color: var(--link-hover-color);
    }
  }
  .post-list-item{
    margin: 0.8em 0.5em 0.8em 0;
    min-width: 300px;
    display: inline-block;
    .post-list-title{
      font-size: 1.3em;
      padding-bottom: 0.2em;
    }
    .post-list-time{
      color: gray
    }
    .post-list-tags{
      color: gray
    }
  }
  .tags{
    font-size:1.1em;
  }
  .article-count {
    font-size:1.5em;
    text-align:center;
  }
}
@media only screen and (min-width: 900px) {
  .articles-list {
    .post-list {
      padding-left: 60px;
    }
    .post-list-item{
      min-width: 32%
    }
  }
}
@media only screen and (max-width: 900px) {
  .post-list {
    padding: 0 15px;
  }
}
@media only screen and (max-width: 600px) {
  .articles-list {
    .post-list-item{
      margin: 0.6em 0.3em 0.6em 0;
      .post-list-title {
        font-size: 1.3em;
      }
    }
    h2{
      font-size: 1.5em;
    }
  }
}
@media only screen and (max-width: 500px) {
  .articles-list {
    .post-list-item{
      margin: 0.5em 0.3em 0.5em 0;
      .post-list-title {
        font-size: 1.1em;
      }
    }
  }
  .articles-list{
    h2{
      font-size: 1.4em;
    }
  }
}
