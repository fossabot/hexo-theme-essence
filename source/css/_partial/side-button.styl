.side-button{
  right: 1em
  bottom: 1em
  position: fixed
  z-index: 9999
  .button{
    margin-top:0.7em
    background-color: var(--text-color);
    color: var(--background-color);
    padding: 1.1em
    border-radius: 10em;
    line-height: 1
    &:hover{
      cursor: pointer;
    }
  }
  a.top{
    text-decoration:none
    &:hover{
      text-decoration:none
    }
  }
}
